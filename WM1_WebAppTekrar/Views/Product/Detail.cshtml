@model ProductViewModel

@*<h3>@Model.ProductId</h3>
    <h1>@Model.ProductName</h1>
    <h3>@Model.Category.CategoryName</h3>*@

@*<div class="bg-info">@TempData["Mesaj"]</div>*@
<h2>@Model.ProductName</h2>
<h3>@($"{Model.UnitPrice:c2}")</h3>
<br />

<div class="row">
    <div class="col-3 text-black-50">Kategori Adı</div>
    <div class="col-5">@(Model.CategoryId == null ? "Kategorisi Yok" : Model.CategoryName)</div>
</div>
<div class="row">
    <div class="col-3 text-black-50">Tedarikçi Firma</div>
    <div class="col-5">@(Model.SupplierId == null ? "Tedarikçi Firması Yok" : Model.CompanyName)</div>
</div>
<div class="row">
    <div class="col-3 text-black-50"></div>
    <div class="col-5">
        <a asp-action="Update" asp-controller="Products" asp-route-id="@Model.ProductId" class="btn btn-warning">Düzenle</a>
    </div>
    <div class="col">
        <input type="button" class="btn btn-danger" value="SİL!" />
    </div>
</div>


<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Silme Onayı</h4>
            </div>
            <div class="modal-body">
                <p>Ürün silinecektir. Bu işlemin geri dönüşü yoktur!</p>
                <p>Emin Misiniz?</p>
                <p class="debug-url"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Vazgeç</button>
                <a class="btn btn-danger btn-ok">Sil</a>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
    $('#confirm-delete').on('show.bs.modal', function (e) {
        $(this).find('btn-ok').attr('href', '@Url.Action("Delete","Products",new  {id = Model.ProductId})');
    });
    </script>
}

